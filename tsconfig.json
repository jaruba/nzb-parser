{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "customConditions": [
      "module"
    ],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "types" : ["node"]
  },
  "exclude": ["node_modules", "dist"],
}